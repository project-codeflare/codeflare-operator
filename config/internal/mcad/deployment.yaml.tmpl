kind: Deployment
apiVersion: apps/v1
metadata:
  name: mcad-controller-{{.Name}}
  namespace: {{.Namespace}}
  labels:
    app: mcad-{{.Name}}
    component: multi-cluster-application-dispatcher
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mcad-{{.Name}}
  template:
    metadata:
      labels:
        app: mcad-{{.Name}}
        component: multi-cluster-application-dispatcher
    spec:
      containers:
        - args:
            - '--v'
            - '4'
            - '--logtostderr'
          command:
            - mcad-controller
          envFrom:
            - configMapRef:
                name: mcad-controller-configmap
          image: {{.APIServerImage}}
          imagePullPolicy: Always
          name: mcad-controller
          ports:
            - name: https
              containerPort: 6443
              protocol: TCP
            - name: http
              containerPort: 8080
              protocol: TCP
          resources:
            limits:
              cpu: '2'
              memory: 2Gi
            requests:s
              cpu: '2'
              memory: 2Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
            - name: temp-vol
              mountPath: /tmp
      serviceAccountName: mcad-controller-{{.Name}}
      volumes:
        - name: temp-vol
          emptyDir: {}
